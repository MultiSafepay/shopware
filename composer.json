{
    "name": "multisafepay/shopware",
    "require": {
        "ext-json": "*",
        "multisafepay/php-sdk": "^5.4",
        "kriswallsmith/buzz" : "^1.2",
        "nyholm/psr7": "^1.1"
    },
    "require-dev": {
        "phpro/grumphp": "~1.5.0 || v0.19.1",
        "multisafepay/coding-standards":"dev-master"
    },
    "scripts": {
        "phpcs": "@php vendor/bin/phpcs --standard=phpcs.ruleset.xml -n -v .",
        "phpcbf": "@php vendor/bin/phpcbf --standard=phpcs.ruleset.xml -n -v ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true,
            "php-http/discovery": false
        }
    }
}
